<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.CardFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/backend_soft"
        app:strokeColor="@color/backend_deep"
        app:strokeWidth="3.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="45dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp"
                android:src="@drawable/backend_profile"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircleImageStyle"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_profile"
                app:layout_constraintStart_toStartOf="@id/iv_profile"
                app:layout_constraintEnd_toEndOf="@id/iv_profile"
                android:layout_marginTop="12dp"
                android:text="디노"
                android:textSize="24dp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/text_nam"/>

            <TextView
                android:id="@+id/tv_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintStart_toStartOf="@id/iv_profile"
                app:layout_constraintEnd_toEndOf="@id/iv_profile"
                android:layout_marginTop="4dp"
                android:text="백엔드"
                android:textSize="20dp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/text_job"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/second_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_job"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/tv_tech"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기술스택"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="16dp"
                    android:textColor="@color/text_nam"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <LinearLayout
                    android:id="@+id/linearlayout_tech"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tech"
                    app:layout_constraintStart_toStartOf="@id/tv_tech"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tech1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:minWidth="66dp"
                        android:minHeight="32dp"
                        android:background="@drawable/rounded_bg"
                        android:text="텍스트"
                        android:fontFamily="@font/pretendard_medium"
                        android:textColor="@color/white"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="6dp"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/tv_tech2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:minWidth="66dp"
                        android:minHeight="32dp"
                        android:background="@drawable/rounded_bg"
                        android:text="텍스트"
                        android:fontFamily="@font/pretendard_medium"
                        android:textColor="@color/white"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="6dp"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:id="@+id/tv_tech3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:minWidth="66dp"
                        android:minHeight="32dp"
                        android:background="@drawable/rounded_bg"
                        android:text="텍스트"
                        android:fontFamily="@font/pretendard_medium"
                        android:textColor="@color/white"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="6dp"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dividerColor="@color/backend_deep"
                    app:layout_constraintTop_toBottomOf="@+id/linearlayout_tech"
                    android:layout_marginTop="20dp"/>




            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>