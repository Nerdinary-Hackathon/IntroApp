<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/color_cccccc"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivReceivedCardProfile"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/android_onboarding_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvReceivedCardNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="디노"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/ivReceivedCardProfile"
            app:layout_constraintTop_toTopOf="@+id/ivReceivedCardProfile" />

        <TextView
            android:id="@+id/tvReceivedCardJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:text="Backend"
            android:textColor="@color/color_0f0f10_60"
            app:layout_constraintStart_toStartOf="@+id/tvReceivedCardNickname"
            app:layout_constraintTop_toBottomOf="@+id/tvReceivedCardNickname" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>