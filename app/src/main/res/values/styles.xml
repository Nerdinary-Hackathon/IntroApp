<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToggleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/toggle_selector</item>
        <item name="android:textColor">@color/toggle_text_selector</item>
        <item name="shapeAppearanceOverlay">@style/ToggleCornerStyle</item>
    </style>

    <style name="CircleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ToggleCornerStyle">
        <item name="cornerSize">16dp</item>
    </style>

   <!--입력 버튼 커스터마이징    -->
    <style name="SubmitButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/SubmitButtonShape</item>
    </style>

    <style name="SubmitButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <!-- 왼쪽은 직선으로 유지 -->
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>



</resources>