<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 선택된 상태: color_0f0f10 배경 + 흰색 텍스트 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_0f0f10" />
            <corners android:radius="32dp" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <!-- 선택되지 않은 상태: 흰색 배경 + color_c2c4c8 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke
                android:width="1dp"
                android:color="@color/color_c2c4c8" />
            <corners android:radius="32dp" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>

</selector>